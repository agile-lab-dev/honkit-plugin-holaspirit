{
  "name": "honkit-plugin-holaspirit",
  "version": "1.0.1",
  "description": "A plugin to validate and convert role mentions inside pages into Holaspirit links",
  "repository": {
    "type": "git",
    "url": "https://github.com/agile-lab-dev/honkit-plugin-holaspirit.git"
  },
  "author": "Manuel Scurti",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/agile-lab-dev/honkit-plugin-holaspirit/issues"
  },
  "homepage": "https://github.com/agile-lab-dev/honkit-plugin-holaspirit#readme",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "honkit": ">1.x.x"
  },
  "honkit": {
    "properties": {
      "organizationId": {
        "type": "string",
        "default": "",
        "description": "It is the organizationId of your organization given by Holaspirit platform"
      },
      "token": {
        "type": "string",
        "default": "",
        "description": "It is your Holaspirit's read-only access token"
      }
    }
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^14.3.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "honkit-tester": "^1.9.6",
    "typescript": "~4.6.4",
    "prettier": "^2.3.2"
  }
}
